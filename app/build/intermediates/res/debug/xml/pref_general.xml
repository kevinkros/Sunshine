<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<EditTextPreference 
	    android:key="@string/pref_location_key" 
	    android:title="@string/pref_location_label"
	    android:defaultValue="@string/pref_location_default"
	    android:inputType="text"
	    android:singleLine="true" />
	
	<ListPreference 
	    android:key="@string/pref_temperatureunits_key" 
	    android:title="@string/pref_temperatureunits_label"
	    android:defaultValue="@string/pref_temperatureunits_metric"
	    android:inputType="text"
	    android:singleLine="true" 
	    android:entries="@array/pref_temperatureunits_entries"
    	android:entryValues="@array/pref_temperatureunits_values"/>
	
</PreferenceScreen>
